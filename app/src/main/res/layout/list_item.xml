<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/list_height"
        android:layout_height="@dimen/list_height"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="1"
        android:padding="@dimen/zero"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/list_height"
        android:layout_gravity="top"
        android:layout_weight="4"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding10"
        android:paddingTop="@dimen/padding8"
        android:paddingRight="@dimen/padding8"
        android:paddingBottom="@dimen/padding8">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="@color/itemTitleTextColor"
            android:textSize="@dimen/text_size_20" />

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1">

            <TextView
                android:id="@+id/review_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/review" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_toRightOf="@id/review_text"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/review_star1"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star_filled"
                    android:tint="@color/reviewStarColor" />

                <ImageView
                    android:id="@+id/review_star2"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star_filled"
                    android:tint="@color/reviewStarColor" />

                <ImageView
                    android:id="@+id/review_star3"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star_filled"
                    android:tint="@color/reviewStarColor" />

                <ImageView
                    android:id="@+id/review_star4"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star_filled"
                    android:tint="@color/reviewStarColor" />

                <ImageView
                    android:id="@+id/review_star5"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star_filled"
                    android:tint="@color/reviewStarColor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="2"
                android:gravity="left"></LinearLayout>


        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/img_width"
        android:layout_height="@dimen/img_width"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginRight="-8dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:tint="@color/colorPrimary" />

</LinearLayout>
